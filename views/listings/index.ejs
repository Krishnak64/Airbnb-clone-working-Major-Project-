<% layout("/layouts/boilerplate") %>



<style>
/* -------------------- Base Styling -------------------- */
  #filters {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 1.5rem;
    overflow: hidden;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    transition: opacity 0.2s ease-in-out;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter i {
    display: block;
    margin-bottom: 0.3rem;
    font-size: 1.6rem;
  }

  .filter p {
    font-size: 0.85rem;
    margin: 0;
  }

  .tax-toggle {
    border: 1px solid #000;
    border-radius: 1rem;
    height: 3rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .tax-info {
    display: none;
  }

  /* -------------------- Smooth Scrolling & No Scrollbar -------------------- */
  #filters {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none;  /* IE & Edge */
    scrollbar-width: none;     /* Firefox */
  }

  #filters::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }

  /* Remove outline when clicking or scrolling */
  *:focus {
    outline: none !important;
    box-shadow: none !important;
  }

  /* -------------------- Responsive Layout -------------------- */

  /* Extra Large (≥1200px) */
  @media (min-width: 1200px) {
    #filters {
      flex-wrap: wrap;
      justify-content: flex-start;
    }
    .filter i { font-size: 1.8rem; }
    .filter p { font-size: 0.9rem; }
  }

  /* Large (992px–1199px) */
  @media (max-width: 1199px) and (min-width: 992px) {
    #filters {
      flex-wrap: wrap;
      justify-content: flex-start;
    }
    .filter i { font-size: 1.6rem; }
    .filter p { font-size: 0.85rem; }
  }

  /* Medium (768px–991px) */
  @media (max-width: 991px) and (min-width: 768px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      gap: 1rem;
    }
    .filter, .tax-toggle {
      scroll-snap-align: center;
    }
    .filter i { font-size: 1.4rem; }
    .filter p { font-size: 0.8rem; }
    .tax-toggle { font-size: 0.9rem; padding: 0.6rem 1rem; }
  }

  /* Small (576px–767px) */
  @media (max-width: 767px) and (min-width: 576px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      gap: 1rem;
    }
    .filter, .tax-toggle {
      scroll-snap-align: center;
    }
    .filter i { font-size: 1.3rem; }
    .filter p { font-size: 0.75rem; }
    .tax-toggle {
      font-size: 0.8rem;
      padding: 0.6rem 1rem;
      border-radius: 1rem;
    }
  }

  /* Extra Small (<576px) */
  @media (max-width: 575px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: scroll;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      padding: 0.8rem;
      gap: 0.8rem;
    }
    .filter, .tax-toggle {
      scroll-snap-align: center;
    }
    .filter i { font-size: 1.2rem; }
    .filter p { font-size: 0.7rem; }
    .tax-toggle {
      border-radius: 0.8rem;
      font-size: 0.75rem;
      padding: 0.5rem 0.8rem;
      height: auto;
    }
  }

  /* Very Small Phones (<400px) */
  @media (max-width: 400px) {
    .filter i { font-size: 1.1rem; }
    .filter p { font-size: 0.65rem; }
    .tax-toggle {
      font-size: 0.7rem;
      padding: 0.5rem;
    }
  }

</style>



